#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int principal;
    float rate, time;

    
    float simple_interest;

    scanf("%d %f %f", &principal, &rate, &time);

    
    simple_interest = (principal * rate * time) / 100.0;

   
    printf("%.2f\n", simple_interest);

    return 0;
}    
 
